componentDidMount() {
    const cartJSON = localStorage.getItem('cart');
    const cart = JSON.parse(cartJSON);
    this.setState({
        items: ['shoes', 'sandals', 'hat', 'sunglasses']
        cart: cart || [] //so that when the cart isn't there it doesn't give an error
    })
}
    

